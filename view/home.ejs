<!DOCTYPE html>
<html>
<head>
  <title>URL Shortener</title>
</head>
<body>

<h1>Create Short URL</h1>

<form action="/url" method="POST">
  <input type="text" name="redirectURL" placeholder="Enter URL" required>
  <button type="submit">Shorten</button>
</form>

<h2>All URLs</h2>

<table border="1" cellpadding="8">
  <tr>
    <th>Short URL</th>
    <th>Original URL</th>
    <th>Visits</th>
  </tr>

  <% allURL.forEach(url => { %>
  <tr>
    <td>
      <a href="/<%= url.shortId %>">
        http://localhost:8004/<%= url.shortId %>
      </a>
    </td>
    <td><%= url.redirectURL %></td>
    <td><%= url.visitHistory.length %></td>
  </tr>
  <% }) %>

</table>

</body>
</html>
